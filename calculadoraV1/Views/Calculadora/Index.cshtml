@model CalculadoraModel


<div class="container">
    <h2 class="title-calc">Calculadora V1</h2>

    @using (Html.BeginForm()) {
        <div class="form-group">
            @Html.LabelFor(c => c.Valor1, "Primeiro número", htmlAttributes: new {@class = "form-label"})
            @Html.TextBoxFor(c => c.Valor1, new { @class = "form-control", placeholder = "Insira o valor"})
        </div>
        <div class="form-group">
            @Html.LabelFor(c => c.Valor2, "Segundo número" ,htmlAttributes: new {@class = "form-label"})
            @Html.TextBoxFor(c => c.Valor2, new { @class = "form-control", placeholder = "Insira o valor"})
        </div>
        <div class="form-group">
            @Html.LabelFor(c => c.Operador, htmlAttributes: new {@class = "form-label"})
            @Html.DropDownListFor(c => c.Operador, new SelectList(new[] {"+","-","*","/"}), new { @class = "form-select"})
        </div>
        <div class="form-group">
            <input type="submit" value="Calcular" class="btn-calculate">
        </div>
    }

    @if (Model.Resultado != 0) {
        <h3 class="resultado">Resultado: @Model.Resultado</h3>
    }
</div>
